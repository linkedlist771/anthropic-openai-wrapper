# ============================================
# Anthropic OpenAI Wrapper - 环境变量配置模板
# ============================================
# 复制此文件为 .env 并根据需要修改配置
# cp .env.template .env

# ============================================
# Anthropic API 配置
# ============================================


# Anthropic API 基础地址（可选，默认使用官方地址）
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# API 响应的默认最大 Token 数量
DEFAULT_MAX_TOKENS=40960

# ============================================
# 服务访问认证
# ============================================

# 访问本服务的 API 密钥（留空则禁用认证）
API_KEY=

# ============================================
# JWT 认证配置（管理后台）
# ============================================

# JWT 加密密钥（生产环境请务必修改！）
JWT_SECRET=your-secret-key-change-in-production

# JWT Token 过期时间（小时）
JWT_EXPIRATION_HOURS=24

# ============================================
# 数据库配置
# ============================================

# SQLite 数据库文件路径
DATABASE_PATH=data/admin.db

# ============================================
# 服务器配置
# ============================================

# 服务监听端口
PORT=8363

# Gunicorn Worker 进程数（默认为 CPU 核心数）
WORKERS=4

# 日志级别（DEBUG、INFO、WARNING、ERROR）
LOG_LEVEL=INFO


# 前端缓存路径

STATIC_DIR=/dist